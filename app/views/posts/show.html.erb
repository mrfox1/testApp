<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<%= image_tag @post.image if @post.image%>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<h2>Комментарии:</h2>
<%= render @post.comments %>

<h2>Добавить комментарий:</h2>
<%= render 'comments/form_for_comments' %>

<%= link_to 'Edit', edit_post_path(@post) if user_author(@post.user)%> |
<%= link_to 'Back', posts_path %>
